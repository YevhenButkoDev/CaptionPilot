{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "fs-storage",
  "description": "Allow FS operations inside the app data directory",
  "windows": ["main"],
  "permissions": [
    "fs:default",
    { "identifier": "fs:allow-mkdir" },
    { "identifier": "fs:allow-write-file" },
    { "identifier": "fs:allow-read-file" },
    {
      "identifier": "fs:scope",
      "allow": [
        { "baseDir": "AppData", "path": ""  },
        { "baseDir": "AppData", "path": "*" },
        { "baseDir": "AppData", "path": "**" }
      ]
    }
  ]
}